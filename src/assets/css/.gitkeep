 .card-content{
        margin:40px 20px;
        box-sizing:border-box;
        }
        .title-top{
        display:block;
        text-align:center;
        margin:0 0 -58px 0;
        padding:10px 0;
        background:rgba(0,0,0,.6);
        color:white;
        opacity:.999;
        }
        .title-bottom{
        display:block;
        text-align:center;
        margin:-58px 0 0 0;
        padding:10px 0;
        background:rgba(0,0,0,.6);
        color:white;
        opacity:.999;
        }
        .card-content img{
        display:block;
        z-index:1;
        width:100%;
        margin:0 !important;
        }